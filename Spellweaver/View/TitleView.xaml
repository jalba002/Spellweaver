<UserControl x:Class="Spellweaver.View.TitleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spellweaver.View"
             mc:Ignorable="d" 
             Width="auto"
             Height="auto">
    <!-- Header -->
    <StackPanel Orientation="Vertical"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <StackPanel Orientation="Vertical"
                 >
            <Image Source="/Images/BookIcon.png"
                   Width="250"
                   Height="250"/>
            <TextBlock VerticalAlignment="Center" 
                       Margin="5,0,0,0"
                       Foreground="{StaticResource Color4}"
                       FontFamily="Montserrat"
                       FontSize="26"
                       Text="Welcome to Spellweaver"/>
            <TextBlock Text="{Binding SpellweaverVersion, RelativeSource={RelativeSource AncestorType=Window}}"
                       HorizontalAlignment="Stretch"
                       TextAlignment="Right"/>
        </StackPanel>
    </StackPanel>
</UserControl>
