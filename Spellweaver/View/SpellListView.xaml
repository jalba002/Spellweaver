<UserControl x:Class="Spellweaver.View.SpellListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Spellweaver.View"
             xmlns:converter="clr-namespace:Spellweaver.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:Background="LightGray">
    <UserControl.Resources>
        <converter:NumericalLevelToStringConverter x:Key="LevelStringToIntConverter"/>
        <ControlTemplate x:Key="BaseText" TargetType="ContentControl">
            <StackPanel Orientation="Vertical" Margin="0,0,0,0">
                <TextBox 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    VerticalScrollBarVisibility="Auto"
                    TextWrapping="Wrap"
                    Margin="0"
                    Padding="2"
                    FontFamily="Montserrat"
                    Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
            </StackPanel>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5, 5, 5, 0"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Command="{Binding AddCommand}">
                <DockPanel>
                    <Image Source="/Images/add.png" Width="20" Margin="5" HorizontalAlignment="Left"></Image>
                    <TextBlock Text="Add Spell" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </DockPanel>
            </Button>
            <!--<Button Grid.Column="1" Command="{Binding RemoveCommand}">
                <DockPanel>
                    <Image Source="/Images/remove.png" Width="20" Margin="5"></Image>
                    <TextBlock Text="Remove Spell" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </DockPanel>
            </Button>-->

            <ListView DockPanel.Dock="Top"
                          Margin="5"
                      Grid.Column="0" Grid.Row="1"
                ItemsSource="{Binding Path=Spells}"
                SelectedItem="{Binding SelectedSpell, Mode=TwoWay}"
                ItemTemplate="{StaticResource SpellDataTemplate}">
            </ListView>
            <TextBlock Text="{Binding SpellCount}" Grid.Row="2" Margin="5" Height="20" VerticalAlignment="Bottom"
                       Grid.ColumnSpan="2"
                           Background="LightSlateGray"/>
        </Grid>
        <Expander Grid.Column="1"
                  ExpandDirection="Left"
                  Template="{DynamicResource SimpleExpanderTemp}">
            <StackPanel Grid.Column="1" Width="250">
                <Button Height="50" Content="Download Spells" Command="{Binding DownloadSpellsCommand}"/>
                <Button Height="50" Content="Download ALL Spells"
                    IsEnabled="False"
                    Command="{Binding DownloadAllSpellsCommand}"
                    Foreground="Red"/>
                <Button Height="50" Content="Import Spell" Command="{Binding ImportSpellCommand}"/>
                <Button Height="50" Content="Import Database" Command="{Binding ImportSpellsCommand}"/>
                <Button Height="50" Content="Export Spell" Command="{Binding ExportSpellCommand}"/>
                <Button Height="50" Content="Export Database" Command="{Binding ExportSpellsCommand}"/>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
