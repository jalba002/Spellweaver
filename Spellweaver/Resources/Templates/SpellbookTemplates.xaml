<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp">

    <ControlTemplate x:Key="SpellbookSingleEntry" TargetType="ContentControl">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
            <DockPanel HorizontalAlignment="Stretch" Height="30" Background="Black">
                <TextBlock Text="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}"
                           Foreground="White"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="10,0,0,0">
                </TextBlock>
                <TextBlock>

                </TextBlock>
            </DockPanel>
            <ListView ItemsSource="{Binding Path=DataContext, RelativeSource={RelativeSource TemplatedParent}}">

            </ListView>
        </StackPanel>
    </ControlTemplate>
</ResourceDictionary>